<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorRedAccent</item>
        <item name="android:navigationBarColor" tools:targetApi="21">@color/colorPrimaryDark</item>
        <item name="android:spinnerStyle">@style/Widget.Spinner</item>
        <item name="android:spinnerItemStyle">@style/SpinnerItem</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">true</item>
        <item name="windowNoTitle">true</item>
        <item name="android:spinnerStyle">@style/Widget.Spinner</item>
        <item name="android:spinnerItemStyle">@style/SpinnerItem</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:spinnerStyle">@style/Widget.Spinner</item>
        <item name="android:spinnerItemStyle">@style/SpinnerItem</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="Widget.Spinner" parent="android:Widget">
        <item name="android:background">@drawable/spinner</item>
        <item name="android:clickable">true</item>
        <item name="android:spinnerMode">dropdown</item>
        <item name="android:dropDownSelector">@android:drawable/list_selector_background</item>
        <item name="android:popupBackground">@android:drawable/spinner_dropdown_background</item>
    </style>

    <style name="SpinnerItem" parent="android:TextAppearance.Widget.TextView">
        <item name="android:textColor">@color/color_text_white</item>
        <item name="android:paddingStart">16dp</item>
<!--        <item name="android:gravity">center_horizontal</item>-->
    </style>

    <style name="CircularProgress" parent="@style/Widget.AppCompat.ProgressBar">
        <item name="android:indeterminateDrawable">@drawable/progress_bar</item>
        <item name="android:minHeight">130dp</item>
        <item name="android:minWidth">130dp</item>
    </style>


    <style name="CustomExoMediaButton">
        <item name="android:background">?android:attr/selectableItemBackground</item>
        <item name="android:scaleType">fitXY</item>
        <item name="android:layout_width">@dimen/video_view_exo_player_play_pause_button_dimen</item>
        <item name="android:layout_height">@dimen/video_view_exo_player_play_pause_button_dimen</item>
    </style>

    <style name="CustomExoMediaButton.Play">
        <item name="android:src">@drawable/ic_play_circle_filled</item>
    </style>

    <style name="CustomExoMediaButton.Pause">
        <item name="android:src">@drawable/ic_pause_circle_filled</item>
    </style>

    <style name="FullScreenDialogStyle" parent="AppTheme">

        <!-- Set this to true if you want Full Screen without status bar -->
        <item name="android:windowFullscreen">true</item>
        <item name="android:navigationBarColor" tools:targetApi="21">@color/colorPrimaryDark</item>
        <item name="android:windowIsFloating">false</item>

        <item name="android:windowBackground">@color/black</item>

        <!-- Additionally if you want animations when dialog opening -->
        <!--<item name="android:windowEnterAnimation">@anim/slide_up</item>-->
        <!--<item name="android:windowExitAnimation">@anim/slide_down</item>-->
    </style>
</resources>