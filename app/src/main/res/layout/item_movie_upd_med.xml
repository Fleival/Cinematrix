<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingStart="6dp"
    android:paddingEnd="12dp"

    tools:context=".view.activities.MainActivity">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        app:cardBackgroundColor="#00000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">


            <ImageView
                android:id="@+id/blured_poster_upd_med_image_view"
                android:layout_width="96dp"
                android:layout_height="151dp"
                android:scaleType="fitXY"
                android:src="@drawable/blur_poster_bg"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0" />

            <ImageView
                android:id="@+id/poster_upd_med_image_view"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="4dp"
                android:layout_marginTop="6dp"
                android:src="@drawable/poster"
                app:layout_constraintBottom_toTopOf="@+id/footer_item_bg"
                app:layout_constraintEnd_toEndOf="@+id/blured_poster_upd_med_image_view"
                app:layout_constraintStart_toStartOf="@+id/blured_poster_upd_med_image_view"
                app:layout_constraintTop_toTopOf="@+id/movie_title_upd_med_tv" />


            <ImageView
                android:id="@+id/footer_item_bg"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:src="@drawable/footer_item_med_bg"
                app:layout_constraintBottom_toBottomOf="@+id/blured_poster_upd_med_image_view"
                app:layout_constraintEnd_toEndOf="@+id/blured_poster_upd_med_image_view"
                app:layout_constraintStart_toStartOf="@+id/blured_poster_upd_med_image_view" />

            <TextView
                android:id="@+id/movie_title_upd_med_tv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@drawable/title_item_med_bg"
                android:gravity="center_horizontal"
                android:paddingTop="2dp"
                android:textColor="@color/color_text_white"
                android:textSize="12sp"
                app:layout_constraintEnd_toEndOf="@+id/blured_poster_upd_med_image_view"
                app:layout_constraintStart_toStartOf="@+id/blured_poster_upd_med_image_view"
                app:layout_constraintTop_toTopOf="@+id/blured_poster_upd_med_image_view"
                tools:text="Captain Marvel" />

            <TextView
                android:id="@+id/movie_duration_upd_med_tv"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_marginStart="8dp"
                android:drawableStart="@drawable/timer_ico"
                android:drawablePadding="4dp"
                android:gravity="center"
                android:textColor="@color/color_text_white"
                android:textSize="8sp"
                app:layout_constraintBottom_toBottomOf="@+id/footer_item_bg"
                app:layout_constraintStart_toStartOf="@+id/footer_item_bg"
                tools:text="116 min." />


            <TextView
                android:id="@+id/pos_rating_value_upd_med"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="4dp"
                android:drawableStart="@drawable/positive_icon"
                android:drawablePadding="2dp"
                android:textColor="@color/color_text_white"
                android:textSize="8sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/footer_item_bg"
                tools:text="+1420" />

            <TextView
                android:id="@+id/neg_rating_value_upd_med"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/negative_icon"
                android:drawablePadding="2dp"
                android:textColor="@color/color_text_white"
                android:textSize="8sp"
                android:layout_marginEnd="4dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                tools:text="-20" />

            <TextView
                android:id="@+id/movie_year_upd_med_tv"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:drawablePadding="4dp"
                android:gravity="center"
                android:textColor="@color/color_text_white"
                android:textSize="9sp"
                app:layout_constraintEnd_toEndOf="@+id/movie_duration_upd_med_tv"
                app:layout_constraintStart_toStartOf="@+id/movie_duration_upd_med_tv"
                app:layout_constraintTop_toTopOf="@+id/footer_item_bg"
                tools:text="2019" />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>

